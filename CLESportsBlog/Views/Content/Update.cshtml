@model CLESportsBlog.Models.Content
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Update";
}

<!DOCTYPE html>

<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Update</title>
    <link href="~/css/UpdateStyleSheet.css" rel="stylesheet" />
</head>

<body>

    <h1>Edit Post</h1>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Update">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="TeamId" />

                <div class="form-group">
                    <label asp-for="Title" class="control-label"></label>
                    <br />
                    <br />
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                    <br />
                    <br />
                    <div class="form-group">
                        <label asp-for="Body" class="control-label"></label>
                        <br />
                        <br />
                        <input asp-for="Body" class="form-control" size="100" />
                        <span asp-validation-for="Body" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <label asp-for="Author" class="control-label"></label>
                        <br />
                        <br />
                        <input asp-for="Author" class="form-control" />
                        <span asp-validation-for="Author" class="text-danger"></span>
                    </div>
                    <br />
                    <br />
                    <div class="form-group">
                        <input type="submit" value="Edit" class="btn btn-primary" size="100" />
                    </div>
                    <br />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Details" asp-controller="Team" asp-route-id="@Model.TeamId">Back to Posts</a>
    </div>

</body>

</html>
